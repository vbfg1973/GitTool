namespace CodeAnalysis.Domain.Analyzers.Complexity.Tests.TestClasses
{
    public class SwitchClass
    {
        public void SingleSwitch()
        {
            var i = Random.Shared.Next(1, 3);

            switch (i)
            {
                case 1:
                    break;
                case 2:
                    break;
                case 3:
                    break;
                default:
                    break;
            }
        }
                
        public int SwitchPattern()
        {
            var i = Random.Shared.Next(1, 3);

            return i switch
            {
                1 => 1,
                2 => 2,
                3 => 3,
                _ => throw new ArgumentOutOfRangeException(nameof(i), i, null)
            };
        }

        public void DoubleSwitch()
        {
            var i = Random.Shared.Next(1, 3);

            switch (i)
            {
                case 1:
                    var j = Random.Shared.Next(1, 3);

                    switch (j)
                    {
                        case 1:
                            break;
                        case 2:
                            break;
                        case 3:
                            break;
                        default:
                            break;
                    }

                    break;
                case 2:
                    var k = Random.Shared.Next(1, 3);

                    switch (k)
                    {
                        case 1:
                            break;
                        case 2:
                            break;
                        case 3:
                            break;
                        default:
                            break;
                    }

                    break;
                case 3:
                    var l = Random.Shared.Next(1, 3);

                    switch (l)
                    {
                        case 1:
                            break;
                        case 2:
                            break;
                        case 3:
                            break;
                        default:
                            break;
                    }

                    break;
                default:
                    break;
            }
        }
    }
}